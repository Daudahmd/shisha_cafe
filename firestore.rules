rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Bookings collection rules
    match /bookings/{bookingId} {
      // Allow anyone to create bookings (for customer booking submissions)
      allow create: if true;
      
      // Allow authenticated users (admins) to read, update, and delete bookings
      allow read, update, delete: if request.auth != null;
      
      // Allow listing all bookings only to authenticated users (admins)
      allow list: if request.auth != null;
    }
    
    // Prevent access to any other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}